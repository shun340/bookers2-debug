<% if book.favorited_by?(current_user) %>
  <p>
    <%= link_to book_favorites_path(book), class: "favorite01", method: :delete, remote: true do %>
      ♥<%= book.favorites.count %>
    <% end %>
  </p>
  <% else %>
  <p>
    <%= link_to book_favorites_path(book), class: "favorite02", method: :post, remote: true do %>
      ♥<%= book.favorites.count %>
    <% end %>
  </p>
<% end %>