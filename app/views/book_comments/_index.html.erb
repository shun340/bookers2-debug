<% book.book_comments.each do |book_comment| %>
  <% book_comment_user = book_comment.user %>
  <tr>
    <td>
      <%= link_to user_path(book_comment_user), class: "user_#{book_comment_user.id}" do %>
        <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
        <%= book_comment_user.name %>
      <% end %>
    </td>
    <td>
      <%= book_comment.comment %>
    </td>

    <td>
      <% if book_comment_user == current_user %>
        <%= link_to "Destroy", book_book_comment_path(book_comment.book_id, book_comment.id), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
      <% end %>
    </td>
  </tr>
<% end %>


